@model CipherDrop.Models.UserRegister

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="display-5 text-center mb-4">Register</h1>
                    <p class="lead text-center">Enter your details.</p>
                    <form asp-controller="Register" asp-action="Index" method="post">
                        @if (Model != null)
                        {
                            <div class="mb-3">
                                <label for="Input_Name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="Input_Name" name="Name" required minlength="3" maxlength="60" value="@Model.Name">
                                <span asp-validation-for="Name" class="text-danger"></span> 
                            </div>
                            <div class="mb-3">
                                <label for="Input_Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Input_Email" name="Email" required maxlength="255" value="@Model.Email">
                                <span asp-validation-for="Email" class="text-danger"></span> 
                            </div>
                            <div class="mb-3">
                                <label for="Input_Password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="Input_Password" name="Password" required minlength="8" maxlength="100" value="@Model.Password">
                                <span asp-validation-for="Password" class="text-danger"></span> 
                            </div>
                            <div class="mb-3">
                                <label for="Input_ConfirmPassword" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" id="Input_ConfirmPassword" name="ConfirmPassword" required minlength="8" maxlength="100" value="@Model.ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span> 
                            </div>
                        }
                        else
                        {
                            <p>Error: Model is null.</p>
                        }
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                
                    </form>

                    <div class="mt-3 text-center text-muted">
                        <a href="/Login" class="text-decoration-none ">Already have an account? Log in</a>
                    </div>
                    <div asp-validation-summary="All" class="text-danger mt-3"></div> <!-- Display all model errors -->

                </div>
            </div>
        </div>
    </div>
</div>
